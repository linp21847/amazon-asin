{
    "manifest_version": 2,
    "name": "Vinnactus",
    "version": "0.2",
    "icons": {
       "16": "/assets/img/favicon.png",
       "64": "/assets/img/favicon.png"
    },

    "permissions": [
        "tabs",
        "chrome://favicon/",
        "http://*/*",
        "https://*/*",
        "storage"
    ],

    "description": "A plain text description -  lorem ipsum",

    "background" : {
        "scripts" : [
            "/assets/js/jquery-1.11.1.min.js", 
            "/assets/js/common.js",
            "/assets/js/background.js"
        ]
    },

    "browser_action": {
        "default_title": "MLL Chrome Extension",
        "default_icon": "assets/img/favicon.png"
    },

    "content_scripts": [ {
        "js": [
            "/assets/js/jquery-1.11.1.min.js",
            "/assets/js/content_script.js"
        ],
        "matches": [
            "https://awinery.vendhq.com/"
        ]
    }],
    "web_accessible_resources": [
        "assets/css/style.css"
    ]
}